@using Microsoft.Web.Mvc
<!DOCTYPE html>
<html>
<head>
    <title>MovieLibrary - @ViewBag.Title</title>
    @Html.Css("Site.css")
    @Html.Css("movies.css")
    @Html.Script("jquery-1.7.2.min.js", "jquery-1.7.2.js")
    @Html.Script("jquery.validate.min.js", "jquery.validate.js")
    @Html.Script("jquery.validate.unobtrusive.min.js", "jquery.validate.unobtrusive.js")
    @Html.Script("jquery.unobtrusive-ajax.min.js", "jquery.unobtrusive-ajax.js")
</head>

<body>
    <div id="header">
      Movie Library
    </div>
    <div id="menu">
      @Html.ActionLink("Browse contents", "Index", "Movies")
      @Html.ActionLink("Add Movies", "New", "Movies")
    </div>
    <div id="content">
        @RenderBody()
    </div>
</body>
</html>
